<runtime ram="128M" caps="2000" binary="init">

	<requires> <timer/> </requires>

	<events>
		<timeout meaning="failed" sec="30" />
		<log meaning="succeeded">--- parent done ---*child*exited*</log>
	</events>

	<content>
		<rom label="ld.lib.so"/>
		<rom label="libc.lib.so"/>
		<rom label="libm.lib.so"/>
		<rom label="jemalloc.lib.so"/>
		<rom label="posix.lib.so"/>
		<rom label="vfs.lib.so"/>
		<rom label="vfs"/>
		<rom label="test-fork_execve"/>
	</content>

	<config verbose="yes">
		<parent-provides>
			<service name="ROM"/>
			<service name="LOG"/>
			<service name="CPU"/>
			<service name="PD"/>
			<service name="Timer"/>
		</parent-provides>
		<start name="test-fork_execve" caps="1500">
			<resource name="RAM" quantum="1G"/>
			<config ld_verbose="yes">
				<arg value="name_of_executeable"/>
				<arg value="10"/>
				<env key="WIZARD" value="gandalf"/>
				<libc stdin="/null" stdout="/log" stderr="/log">
					<fd id="3" path="/seek_test" readable="yes" seek="5"/>
				</libc>
				<vfs>
					<null/> <log/>
					<inline name="seek_test">0123456789</inline>
					<rom name="test-fork_execve"/>
				</vfs>
			</config>
			<route>
				<service name="ROM" label="/test-fork_execve">
					<parent label="test-fork_execve"/> </service>
				<any-service> <parent/> </any-service>
			</route>
		</start>
	</config>

</runtime>
